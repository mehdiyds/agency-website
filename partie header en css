/* Mobile menu adjustments */
@media (max-width: 768px) {
    .menu-toggle {
        display: block;
    }
    
    .nav-links {
        position: fixed;
        top: 60px; /* Adjusted position */
        left: -100%;
        width: 100%;
        height: calc(100vh - 60px);
        background: white;
        flex-direction: column;
        align-items: center;
        padding: 1rem 0;
        transition: left 0.3s ease;
        gap: 0;
    }
    
    .nav-links.active {
        left: 0;
    }
    
