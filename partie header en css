        width: 100%;
        text-align: center;
    }
    
    .nav-links a {
        display: block;
        padding: 0.8rem 1rem;
        border-radius: 0;
    }
    
    .nav-links a::after {
        display: none; /* Hide underline on mobile */
    }
}
